" Line wrapping off
set nowrap

" Formatting
set nocp incsearch
set cinoptions=:0,p0,t0
set cinwords=if,else,while,do,for,switch,case
set formatoptions=tcqr
set cindent
set smarttab
set expandtab

" Visual
" Show matching brackets.
set showmatch
" Bracket blinking.
set mat=5
set list
" Show $ at end of line and trailing space as
set lcs=tab:^T,eol:$,trail:~,extends:>,precedes:<
" No blinking.
set novisualbell
" No noise.
set noerrorbells
" Always show status line.
set laststatus=2
